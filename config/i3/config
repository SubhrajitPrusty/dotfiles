# screenshot
mode "screenshot" {
    bindsym p exec scrot -e 'mv $f ~/Pictures/scrot/'

    bindsym Escape mode "default"
    bindsym Return mode "default"
}

bindsym $mod+p mode "screenshot"

# flameshot
