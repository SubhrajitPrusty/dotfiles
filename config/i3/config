# screenshot
mode "screenshot" {
    bindsym p exec scrot -e 'mv $f ~/Pictures/scrot/'

    bindsym Escape mode "default"
    bindsym Return mode "default"
}

bindsym $mod+p mode "screenshot"

# flameshot
bindsym $mod+shift+s exec flameshot gui

## spotify mode configs

mode "spotify" {
    bindsym Right exec playerctl next
    bindsym Left exec playerctl previous
    bindsym p exec playerctl play-pause

    bindsym Escape mode "default"
    bindsym Return mode "default"
}

bindsym $mod+o mode "spotify"

# move current workspace to next display/output
bindsym $mod+x move workspace to output next

